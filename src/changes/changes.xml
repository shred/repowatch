<changes title="History of Changes">
  <devs>
    <person name="Richard Körber" id="shred"/>
  </devs>
  
  <release version="0.9" date="26 August 2007">
    <action type="fix" dev="shred">Correct XHTML header is returned now.</action>
    <action type="add" dev="shred">Added a filter for updates to the change list.</action>
  </release>
  
  <release version="0.10" date="05 October 2007">
    <action type="fix" dev="shred">Static image URL contained session tracking, removed.</action>
    <action type="fix" dev="shred">XHTML syntax error removed.</action>
  </release>
  
  <release version="0.11" date="10 October 2007">
    <action type="update" dev="shred">Dramatically improved the speed of the scanner.</action>
    <action type="fix" dev="shred">Static image URL got wrong path. Fixed.</action>
  </release>
  
  <release version="0.12" date="27 July 2008">
    <action type="update" dev="shred">Major change: moved to the Spring framework.</action>
    <action type="fix" dev="shred">RSS feed looked ugly on Firefox 3, and probably also other feed readers.</action>
    <action type="update" dev="shred">Major rework of the synchronizer. It now honors the repomd.xml file and computes the database checksums.</action>
    <action type="update" dev="shred">The synchronizer is now invoked using Quartz.</action>
  </release>

  <release version="0.13" date="28 July 2008">
    <action type="fix" dev="shred">Primary scanner failed on some XML files.</action>
    <action type="add" dev="shred">Search can be limited on domains.</action>
    <action type="update" dev="shred">Search now uses Hibernate's Criteria API.</action>
  </release>
  
  <release version="0.14" date="31 July 2008">
    <action type="update" dev="shred">The result browser now also handles large results.</action>
    <action type="fix" dev="shred">Browsing the search result was broken. (Bug #9)</action>
  </release>

  <release version="0.15" date="17 October 2008">
    <action type="add" dev="shred">Added package blacklist.</action>
  </release>

  <release version="0.16" date="16 Januar 2009">
    <action type="update" dev="shred">Changed to Maven</action>
    <action type="fix" dev="shred">RSS feed always showed packages as "updated"</action>
    <action type="update" dev="shred">Package description now shows paragraphs</action>
  </release>

</changes>
